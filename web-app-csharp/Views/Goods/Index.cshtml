@model web_app_csharp.Models.Goods.GoodsListModel

<a class="btn btn-primary mb-2" role="button" asp-action="Create" asp-controller="Goods">Create</a>
<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">GoodId</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Producer</th>
        <th scope="col">DeptId</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var good in Model.Goods)
    {
        <tr>
            <td>@good.GoodId</td>
            <td>@good.Name</td>
            <td>@good.Price</td>
            <td>@good.Quantity</td>
            <td>@good.Producer</td>
            <td>@good.DeptId</td>
            <td>@good.Description</td>
            <td>
                <div class="d-flex gap-2 align-items-center">
                    <a asp-controller="Goods" asp-action="Update" asp-route-id="@(good.GoodId)" class="btn btn-primary d-flex align-items-center justify-content-center" role="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                        </svg>
                    </a>
                    <a class="btn btn-danger d-flex align-items-center justify-content-center" role="button"
                       asp-controller="Goods"
                       asp-action="Delete"
                       asp-route-id="@(good.GoodId)"
                       >
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                        </svg>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="row">
    <p>
        <span class="fw-bold">Count Of Goods Below Average Price: </span> @(Model.ContOfGoodsBelowAveragePrice)
    </p>
</div>


@if (Model.LargestSaleForFirstGood != null)
{
    <h1>Largest Sale for @(Model.Goods.ToList()[0].Name)</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">SalesId</th>
            <th scope="col">CheckNo</th>
            <th scope="col">GoodId</th>
            <th scope="col">DateSale</th>
            <th scope="col">Quantity</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@(Model.LargestSaleForFirstGood.SalesId)</td>
            <td>@(Model.LargestSaleForFirstGood.CheckNo)</td>
            <td>@(Model.LargestSaleForFirstGood.GoodId)</td>
            <td>@(Model.LargestSaleForFirstGood.DateSale)</td>
            <td>@(Model.LargestSaleForFirstGood.Quantity)</td>
        </tr>
        </tbody>
    </table>
}